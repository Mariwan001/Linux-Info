    echo -e "${WHITE}â€¢ Cloud-friendly with Docker/K8s support${NC}"
    echo -e "${WHITE}â€¢ Debian-based but privacy-first${NC}"
    echo
    
    echo -e "${YELLOW}${BOLD}ğŸ¯ PRIVACY ARSENAL:${NC}"
    echo -e "${GREEN}â€¢ AnonSurf: route all traffic through Tor${NC}"
    echo -e "${GREEN}â€¢ Wifiphisher: WiFi security testing${NC}"
    echo -e "${GREEN}â€¢ Bettercap: network attack framework${NC}"
    echo -e "${GREEN}â€¢ Anonsurf-gtk: GUI for anonymity${NC}"
